{
	"name": "ikun-ui",
	"description": "",
	"type": "module",
	"version": "0.0.0",
	"keywords": [
		"web component",
		"component",
		"react",
		"vue",
		"svelte",
		"svelte-kit",
		"dx"
	],
	"license": "MIT",
	"author": "baiwusanyu-c",
	"homepage": "https://github.com/baiwusanyu-c/ikun-ui#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/baiwusanyu-c/ikun-ui.git"
	},
	"bugs": {
		"url": "https://github.com/baiwusanyu-c/ikun-ui/issues"
	},
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs"
		},
		"./*": "./*"
	},
	"files": [
		"dist",
		"*.d.ts"
	],
	"engines": {
		"node": ">=14"
	},
	"scripts": {
		"init": "pnpm i",
		"dev": "",
		"play": "pnpm run --filter @ikun-ui/play dev",
		"dev:playground": "",
		"build:playground": "",
		"dev:docs": "",
		"build:docs": "",
		"build": "rollup -c rollup.config.js",
		"stub": "unbuild --stub",
		"test": "npm run test:integration && npm run test:unit",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"lint": "prettier --plugin-search-dir --check . && eslint .",
		"format": "prettier --plugin-search-dir --write .",
		"release": "bumpp package.json --commit --push --tag",
		"clean": "rimraf dist",
		"prepare": "npx simple-git-hooks",
		"update:deps": "npx taze -w -r major && pnpm run init"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@types/node": "^20.4.2",
		"@playwright/test": "^1.36.1",
		"@rollup/plugin-commonjs": "^25.0.3",
		"@rollup/plugin-node-resolve": "^15.1.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/kit": "^1.22.3",
		"@sveltejs/package": "^2.2.0",
		"@typescript-eslint/eslint-plugin": "^6.1.0",
		"@typescript-eslint/parser": "^6.1.0",
		"baiwusanyu-utils": "^1.0.14",
		"eslint": "^8.45.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte": "^2.32.3",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.0",
		"publint": "^0.1.16",
		"rimraf": "^5.0.1",
		"rollup": "^3.26.3",
		"rollup-plugin-svelte": "^7.1.6",
		"rollup-plugin-typescript2": "^0.35.0",
		"simple-git-hooks": "^2.8.1",
		"svelte": "^4.1.0",
		"svelte-check": "^3.4.6",
		"tslib": "^2.6.0",
		"typescript": "^5.1.6",
		"vite": "^4.4.5",
		"vitest": "^0.33.0",
		"@sveltejs/vite-plugin-svelte": "latest",
		"svelte-preprocess": "latest"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm run lint",
		"commit-msg": "node vertify-commit.js"
	}
}
