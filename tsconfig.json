{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"noImplicitThis": false,
		"noImplicitAny": false,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noLib": false,
		"skipLibCheck": true,
		"preserveSymlinks": true,
		"lib": ["ESNext", "DOM"],
		"types": [
			"node",
		]
	},
	"include": [
		"src/**/*.ts",
		"src/*.svelte"
	],
	// ts 排除的文件
	"exclude": ["node_modules"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
